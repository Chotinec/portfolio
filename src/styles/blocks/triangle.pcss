.triangles {
  position: relative;
  height: 80px;

  &--about {
    margin-top: -80px;
  }
  
  &--reviews-contacts {
    margin-bottom: -80px;
  }
}

.triangles__item {
  display: block;
  width: 50%;
  position: absolute;
  height: 100%;
  fill: $white;

  &--left {
    left: 0;
  }

  &--right {
    right: 0;
  }
}

.triangles-reviews-contacts__item {
  display: block;
  width: 100%;
  height: 100%;
  fill: $white;
}