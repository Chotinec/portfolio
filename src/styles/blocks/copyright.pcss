.copyright {
  display: flex;
  color: #ffffff;
}

.copyright__year {
  font-size: 48px;
  font-weight: 600;
  margin-right: 60px;
  color: rgba(255, 255, 255, 0.1);
  line-height: 1;
}

.copyright__name {
  line-height: 30px;
  text-transform: uppercase;
  margin-bottom: 20px;
}

.copyright__desc  {
  font-size: 16px;
  font-weight: 400;
  line-height: 30px;
  color: rgba(255, 255, 255, 0.15);
}

.copyright__desc-text {
  display: block;
}

