.main-menu__list {
  display: flex;
}

.main-menu__item {
  font-size: 16px;
  font-weight: 400;
  white-space: nowrap;

  &:not(:last-child) {
    margin-right: 60px;
  }

  &--footer {
    color: $white;
    .main-menu__link {
      &:hover {
        color: $dark-hover;
      }
    }
  }

  &:hover {
    text-decoration: underline;
    color: $hover;
  }
    
}