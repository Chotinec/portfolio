mixin nav(mod) 
  nav.nav
    ul.nav__list
      - var nav = ['Главная', 'Обо мне', 'Навыки', 'Работы', 'Отзывы', 'Связаться']
      - var navAnchors = ["#hero", "#about", "#skills", "#works", "#reviews", "#contacts"];
      each item, index in nav
        if mod != 'footer'
          li(class="nav__item nav__item--" + mod)
            a(href=`${navAnchors[index]}` class='nav__link')= item
        else
          li(class="nav__item nav__item--" + mod)
            a(href=`${navAnchors[index]}` class='nav__link')= item